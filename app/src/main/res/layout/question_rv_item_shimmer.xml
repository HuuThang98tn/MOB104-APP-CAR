<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="170dp"
    android:layout_height="230dp"
    android:layout_marginLeft="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/service_shimmer"
            android:layout_width="match_parent"
            android:layout_height="116dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/backgrounds/scenic"
            android:background="@color/shimmer"
            android:orientation="horizontal"/>

        <TextView
            android:id="@+id/name_shimmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/shimmer"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/service_shimmer" />

        <TextView
            android:id="@+id/sub_shimmer"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/shimmer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name_shimmer" />

        <TextView
            android:id="@+id/end_sub_shimmer"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/shimmer"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sub_shimmer" />

        <TextView
            android:id="@+id/price_shimmer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/shimmer"
            android:textColor="@color/monney"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/sub_shimmer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/sub_shimmer"
            app:layout_constraintTop_toTopOf="@+id/sub_shimmer" />

        <TextView
            android:id="@+id/price_shimmer_end"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/shimmer"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/end_sub_shimmer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/end_sub_shimmer"
            app:layout_constraintTop_toTopOf="@+id/end_sub_shimmer" />

        <LinearLayout
            android:id="@+id/ratting_shimmer"
            android:layout_width="99dp"
            android:layout_height="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/price_shimmer_end"
            android:background="@color/shimmer"
            android:orientation="horizontal"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>